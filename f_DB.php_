		if($judge)
		{
			error_log($con->error,0);
			$judge = false;
		}
		if(mysql_num_rows($result) == 0 )
		{
			$errorinfo[$counter] = "<div class = 'center'><a class = 'error'>".
									$table_title."情報が削除されているため".
									$syorimei."できません。</a></div><br>";
			$counter++;
		}
		else
